<header class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href=<%= home_path %>>News Plus</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="<%= navlink_class(home_path) %>"><%= link_to 'Home', home_path %></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">News<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#">Popular News 1</a></li>
          <li><a href="#">Popular News 2</a></li>
        </ul>
      </li>
      <% if logged_in? %>
        <% if @current_user.displayname %>
          <li class="<%= navlink_class(current_user) %>"><%=link_to @current_user.displayname, current_user%></li>
        <% else %>
          <li class="<%= navlink_class(current_user) %>"><%=link_to @current_user.email, current_user%></li>
        <% end %>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <% if logged_in? %>
          <a href="#" class="user-image dropdown-toggle" data-toggle="dropdown">
            <%= gravatar_for(@current_user, 60) %>
          </a>
          <ul class="dropdown-menu">
              <li><%=link_to"Profile", current_user%></li>
                  <li><%=link_to"Settings", edit_user_path(current_user)%></li>
                  <li class="divider"></li>
                  <li><%=link_to"Log out", logout_path, method: :delete %></li>
          </ul>
        <% else %>
          <a href="#" class="user-image dropdown-toggle" data-toggle="dropdown">
            <%= image_tag("account_circle_white.svg", alt: "Logged Out User") %>
          </a>
          <ul class="dropdown-menu">
              <li><%=link_to"Log in", login_path%></li>
          </ul>
        <% end %>
      </li>
    </ul>
  </div>
</header>