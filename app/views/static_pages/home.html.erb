<%provide(:title,"Home")%>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 section">
      <div class="options-section-top">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default" onclick='window.location.href = "/";'>Recent Posts</button>
          <button type="submit" form="selected-topics" class="btn btn-default">Selected Topics Only</button>
          <button type="button" class="btn btn-default" onclick='window.location.href = "/";'>My Settings</button>
        </div>
      </div>
      <table class="table table-bordered">
        <th>News Posts</th>
        <tbody>
          <tr>
            <td class="post">
              <div class="post-image">
                <%= image_tag("account_circle_white.svg", alt: "Logged Out User") %>
              </div>
              <div class="container-fluid">
                <div class="row">
                  <div class="post-heading col-xs-12">
                    REEEEEEEEEEEEEEEEEEEEEEE the night away!
                  </div>
                  <div class="post-details col-xs-9">
                    Post by "xXDestroyerXx", Date: bla bla, News
                  </div>
                  <div class="post-stats col-xs-3">
                    X commments | X views
                  </div>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 section">
      <div class="options-section">
        <div class="options-heading">
          Currently Online
        </div>
        <div class="options-content">
          1,2,3,4,5
        </div>
      </div>
      <div class="options-section">
        <div class="options-heading">
          Topics
        </div>
        <div class="options-content">
          <form id="selected-topics" action="" method="POST">
            1,2,3,4,5
          </form>
        </div>
      </div>
    </div>
  </div>
</div>